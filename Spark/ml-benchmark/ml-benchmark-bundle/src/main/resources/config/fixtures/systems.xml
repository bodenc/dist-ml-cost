<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--
    Use this file to override the default configuration of the pre-defined system beans or to define your own.
    -->

    <!-- Use lifespan "PROVIDED"   if you want to start the systems manually   -->
    <!-- Use lifespan "SUITE"      if you want Peel to deploy to start them once per suite (default for storage systems) -->
    <!-- Use lifespan "EXPERIMENT" if you want Peel to deploy to start them once per experiment (default for all other systems) -->
    <!-- Use lifespan "RUN"        if you want Peel to deploy to start them for each experiment run -->

    <!--************************************************************************
    * Overridden system beans
    *************************************************************************-->

    <!-- Flink (overridden 'flink-1.0.3' bean that depends on 'hdfs-2.7.1') -->
    <bean id="flink-1.0.3" class="org.peelframework.flink.beans.system.Flink" parent="system">
        <constructor-arg name="version" value="1.0.3"/>
        <constructor-arg name="configKey" value="flink" />
        <constructor-arg name="lifespan" value="EXPERIMENT"/>
        <constructor-arg name="dependencies">
            <set value-type="org.peelframework.core.beans.system.System">
                <ref bean="hdfs-2.7.1"/>
            </set>
        </constructor-arg>
    </bean>

    <!-- Spark (overridden 'spark-1.6.0' bean that depends on 'hdfs-2.7.1') -->
    <bean id="spark-1.6.0" class="org.peelframework.spark.beans.system.Spark" parent="system">
        <constructor-arg name="version" value="1.6.0"/>
        <constructor-arg name="configKey" value="spark" />
        <constructor-arg name="lifespan" value="EXPERIMENT"/>
        <constructor-arg name="dependencies">
            <set value-type="org.peelframework.core.beans.system.System">
                <ref bean="hdfs-2.7.1"/>
            </set>
        </constructor-arg>
    </bean>

    <!--************************************************************************
    * Base experiments beans
    *************************************************************************-->

    <bean id="experiment.flink-1.0.3" class="org.peelframework.flink.beans.experiment.FlinkExperiment" abstract="true">
        <constructor-arg name="runner" ref="flink-1.0.3"/>
        <constructor-arg name="runs" value="3"/>
    </bean>

    <bean id="experiment.spark-1.6.0" class="org.peelframework.spark.beans.experiment.SparkExperiment" abstract="true">
        <constructor-arg name="runner" ref="spark-1.6.0"/>
        <constructor-arg name="runs" value="3"/>
    </bean>

</beans>
